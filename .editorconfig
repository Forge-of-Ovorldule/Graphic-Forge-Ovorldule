# Указывает, что это корневой файл EditorConfig
root = true

# Общие правила для всех файлов
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Правила для Python-файлов
[*.py]
max_line_length = 120

# Правила для C/C++ файлов
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
